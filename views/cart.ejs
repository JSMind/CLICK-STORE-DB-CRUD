        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID PRODUCTO</th>
              <th scope="col">ARTICULO</th>
              <th scope="col"></th>
              <th scope="col">CANTIDAD</th>
              <th scope="col">ACCION</th>
              <th scope="col">TOTAL</th>
            </tr>
          </thead>
          <tbody id="items"></tbody>

          <tfoot>
            <tr id="footer">
              <th scope="row" colspan="5" class="text-info"> EMPTY CART <i class="bi bi-bag-x"></i></th>
            </tr>
          </tfoot>
        </table>

        <template id="template-carrito">
          <tr>
            <th scope="row">Id_Producto</th>
            <td>Nombre_Producto</td>
            <td><img src="" alt=""   class="card-img-top" width="60" height="80" ></td>
            <td class="text-center">Cantidad</td>
            <td>
                <button class="btn btn-success btn-sm">
                  <i class="bi bi-cart-check btn-agregar"></i>
                </button>
                <button class="btn btn-danger btn-sm">
                  <i class="bi bi-cart-x btn-quitar"></i>
